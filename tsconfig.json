{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "preserve",
    "jsxImportSource": "react",

    /* Modules */
    "module": "commonjs",

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ]
  }
}
